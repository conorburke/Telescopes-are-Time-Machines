<% provide(:title, "TATM: Home") %>
<h1>Keep Looking Up</h1>
<% unless logged_in? %>
  <div class="home-container-left col-md-3">
    <h3 id="home-page-sign-up-title"> Get Gazing! </h3> 
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <%= render 'sessions/login_form' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="home-container-left col-md-3">
    <h3 id="home-page-sign-up-title">Start Star Talking!</h3>
    <ul style="margin: 30px; padding-left:0;">
      <%= render 'chat_rooms/chat_room' %>
    </ul>
  </div>
<% end %>
<div class="home-container-middle col-md-6"> 
  <div class="image-container">
     <%= image_tag("sts125.jpg", class: "space-pictures") %> 
  </div>
</div>
<div class="home-container-right col-md-3">
  <ul>
    <% TwitterAPI.public_tweets.each do |tweet| %>
      <li><%= tweet.text %></li>
    <% end %>
  </ul>
</div>